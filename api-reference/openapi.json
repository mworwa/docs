{
  "openapi": "3.0.1",
  "info": {
    "title": "Guardian API",
    "description": "API documentation for Guardian services.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://gardian-kappa.vercel.app/api"
    }
  ],
  "paths": {
    "/agents/{agentId}": {
      "post": {
        "summary": "Send feedback to an agent",
        "description": "Send feedback content to a specified agent using their agent ID.",
        "parameters": [
          {
            "in": "path",
            "name": "agentId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the agent to send feedback to."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "example": "I don't like your products"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "agent_id": {
                      "type": "string",
                      "example": "66683c760ea17e1c58a16649"
                    },
                    "agent_name": {
                      "type": "string",
                      "example": "Sentiment"
                    },
                    "content": {
                      "type": "string",
                      "example": "I don't like your products"
                    },
                    "label": {
                      "type": "string",
                      "example": "negative"
                    },
                    "score": {
                      "type": "integer",
                      "example": 1
                    },
                    "label_scores": {
                      "type": "object",
                      "properties": {
                        "positive": {
                          "type": "integer",
                          "example": 0
                        },
                        "neutral": {
                          "type": "integer",
                          "example": 0
                        },
                        "negative": {
                          "type": "integer",
                          "example": 1
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "apiKey": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}