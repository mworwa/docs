{
  "openapi": "3.0.3",
  "info": {
    "title": "Guardian API",
    "description": "API documentation for Guardian.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://gardian-kappa.vercel.app/api"
    }
  ],
  "paths": {
    "/agents/{agentId}/analyze/text": {
      "post": {
        "tags": ["Analyze"],
        "summary": "Send content to an agent",
        "description": "Send content to a specified agent using their agent ID.",
        "parameters": [
          {
            "in": "path",
            "name": "agentId",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the agent to send feedback to."
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "content": {
                    "type": "string",
                    "example": "I don't like your products",
                    "maxLength": 1000,
                    "description": "The text you'd like to analyze. Limit 1000 characters"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "agent_id": {
                      "type": "string",
                      "example": "66683c760ea17e1c58a16649",
                      "description": "ID of the agent that performs the analysis"

                    },
                    "agent_name": {
                      "type": "string",
                      "example": "Sentiment",
                      "description": "Name of the agent that performs the analysis"
                    },
                    "content": {
                      "type": "string",
                      "example": "I don't like your products",
                      "description": "Content sent for analysis"

                    },
                    "label": {
                      "type": "string",
                      "example": "negative",
                      "description": "The label with the highest probability. This will always be the label with the highest score."
                    },
                    "score": {
                      "type": "number",
                      "example": 0.98,
                       "description": "The labelâ€™s score, ranging from 0 to 1, with 1 indicating a high probability of being correct."
                    },
                    "label_scores": {
                      "type": "object",
                      "additionalProperties": {
                        "type": "number"
                      },
                      "example": {
                        "positive": 0,
                        "neutral": 0,
                        "negative": 0.98
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "apiKey": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  }
}